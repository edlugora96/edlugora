@import '../../../asset/style/vars.styl'
@import '../../../asset/style/animations.styl'
.home-header
  height 100vh
  position relative
  transform-style preserve-3d
  overflow hidden
  perspective 100px
  z-index 5
  &::before
    content ""
    background url('../../../asset/img/apple.jpg') #fff
    background-size: initial
    background-repeat: no-repeat
    background-position-x center
    background-position-y: -16rem
    position absolute
    top 0
    right 0
    height 100vh
    left 0
    z-index -1
    background-origin: content-box
    @media screen and (min-width: 700px)
      background-size cover
      background-position-y -5rem
  p
    padding 1rem 0.5rem
    margin 0
    text-align center
  @media screen and (orientation:portrait)
    article
      font-size 6vh
  @media screen and (orientation:landscape)
    article
      font-size 6vw
  .home-wellcome, .home-brand, .home-greeting, .home-link svg
    transform scale(0)
.hero-caption
  .home-wellcome
    animation hero-caption 1s 1 forwards
  .home-brand
    animation hero-caption 1s 1 forwards
    animation-delay 300ms
  .home-greeting
    animation hero-caption 1s 1 forwards
    animation-delay 600ms
  .home-link svg
    animation hero-caption 1s 1 forwards
    animation-delay 900ms

.home-header-body
  display flex
  flex-direction column
  justify-content center
  align-items center
  height 100vh
  width 100vw
  position relative
  top - height-standar
  z-index 2
  transform-origin center center
  animation fade-slide-down 1s 1 forwards


.home-greeting
  margin-bottom: 1rem
  p
    padding: .2rem

.home-greeting-wrap
  position relative
  display flex
  flex-direction: column
  text-align: center
.home-greeting-body
  position relative
  h1
    text-align: center
  svg
    color initial
    font-size: 2rem
    position absolute
    bottom: -2rem
    left calc(50% - 1rem)

  @media screen and (min-width: 700px)
    position relative
    left -1.5rem