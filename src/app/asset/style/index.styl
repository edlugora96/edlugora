.card
  position relative
  z-index 2
  img
    max-width 5rem
    float right
.i-am
  height 100vh
  transform-style preserve-3d
  perspective 100px
  position relative
  z-index 1
  // overflow hidden
  transform-origin center center
  background url('../img/bots.jpg')
  background-position center
  background-size cover
  background-attachment fixed
  *
    position relative
    z-index 2
  h3
    text-align center
    margin-top 2rem
  &:before,  &:after
    content ""
    position absolute
  &:before
    z-index 1
    top -15%
    left -10%
    right -10%
    height 10rem
    background #fff
    transform rotateZ(4deg)
    @media screen and (orientation:landscape)
      top -20%
  &:after
    z-index 1
    bottom -20%
    left -10%
    right -10%
    height 10rem
    background #fff
    transform rotateZ(-4deg)
    @media screen and (orientation:landscape)
      bottom -40%
@keyframes hero-caption
  0% {
    opacity 0
    transform scale(0)
  }
  50% {
    opacity 1
    transform scale(1)
  }
  100% {
    transform none
  }
@keyframes fade-slide-down
  0% {
    opacity 0
    transform translateY(-4rem)
  }
  100% {
    opacity 1
    transform none
  }
@keyframes rotate-up
  100% {
    transform rotateZ(-4deg)
  }

