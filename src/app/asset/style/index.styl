    color #fafafa
  @media screen and (orientation:portrait)
    article
      font-size 6vh
  @media screen and (orientation:landscape)
    article
      font-size 6vw

.Home-Navbar
  height height-standar
  color #fff
.Home-Navbar-ul
  display flex
  flex-direction row
  align-content stretch
  align-items center

  padding 0 0.5rem
  margin 0
  height inherit
  width inherit


  list-style-type none

  font-variant small-caps
  font-weight 900
  a
    color inherit
    text-decoration none
.Home-Navbar-brand
  display inherit
  flex-direction inherit
  align-items inherit
  flex-grow 10
  img
    max-width 40px
    margin-right 0.5rem
.Home-body-navbar
  position relative
  z-index 4
  .dropdown-basic
    display flex
    flex-direction row
    align-items center
    color #fff !important
    text-decoration none
    *
      margin-right 0.2rem
    @media screen and (min-width: 700px)
      display none !important
.Home-Navbar-login
  flex-grow 1
  text-align center

.Home-Navbar-config
  flex-grow 1
  text-align center
.Home-header-body
  display flex
  flex-direction column
  justify-content center
  align-items center
  height 100vh
  width 100vw
  position relative
  top - height-standar
  z-index 2
  transform-origin center center
  animation fade-slide-down 1s 1 forwards
  .stripe
    position absolute
    top 29%
    left -50%
    right -50%
    height 45vh
    background #38514e
    transform rotateZ(10deg)
    z-index 1
    // @media screen and (orientation:portrait)
    @media screen and (orientation:landscape)
      top 36%
      height 40vh
      transform rotateZ(4deg)
  .view-more, p, article
    position relative
    z-index 2
    text-align center
    transform scale(0)
  article
    animation hero-caption 1s 1 forwards
  p
    animation hero-caption 1s 1 forwards
    animation-delay 300ms
  .view-more
    animation hero-caption 1s 1 forwards
    animation-delay 600ms

.Home-body
  transform-style preserve-3d
  perspective 100px
  background #fff
  position relative
  z-index 2
  margin-bottom 40vh
  overflow hidden
  transform-origin center center
  h3
    padding 0 1rem
    text-align center
.card
  position relative
  z-index 2
  // transition all 1s ease-in-out
  @media screen and (min-width: 700px)
    max-width 40vw
    margin 3rem 10vw
    .list-group
      border 1px solid rgba(0,0,0,.125)
      max-width 40vw
      position absolute
      right -101%
      left 101%
    img
      float left !important
  img
    max-width 5rem
    float right
.proyects
  .list-group-item
    @media screen and (max-width: 700px)
      display none
  .list-group-item-show .list-group-item:nth-child(1)
    @media screen and (max-width: 700px)
      display block
      transform scale(0)
      animation list-group-item-show 1s forwards
  .list-group-item-show .list-group-item:nth-child(2)
    @media screen and (max-width: 700px)
      display block
      transform scale(0)
      animation list-group-item-show 1s forwards
      animation-delay 300ms
  .list-group-item-show .list-group-item:nth-child(3)
    @media screen and (max-width: 700px)
      display block
      transform scale(0)
      animation list-group-item-show 1s forwards
      animation-delay 600ms
  .list-group-item-show .list-group-item:nth-child(4)
    @media screen and (max-width: 700px)
      display block
      transform scale(0)
      animation list-group-item-show 1s forwards
      animation-delay 900ms
.i-am
  height 100vh
  transform-style preserve-3d
  perspective 100px
  position relative
  z-index 1
  // overflow-y hidden
  transform-origin center center
  background url('../img/bots.jpg')
  background-position center
  background-size cover
  background-attachment fixed
  @media screen and (min-width: 700px)
    overflow hidden
  *
    position relative
    z-index 2
  footer
    transform scale(0)
    font-size 4rem
    text-align center
    color #fff
  p
    transform scale(0)
    z-index 1
    background rgba(255, 255, 255, .75)
    padding 1rem !important
    margin 4rem 1rem 1rem 1rem!important
    border-radius 0.2rem
    box-shadow shadow-standar
  h3
    transform scale(0)
    text-align center
    margin-top 2rem
    z-index 5
    position relative
  &::before,  &::after
    content ""
    position absolute
    @media screen and (min-width: 700px)
      transform none !important
  &::before
    z-index 3
    top -10%
    left -10%
    right -10%
    height 10rem
    background #fff
    transform rotateZ(4deg)
    @media screen and (min-width: 700px)
      top -7% !important
    @media screen and (orientation:landscape)
      top -30%
  &::after
    z-index 1
    bottom -20%
    left -10%
    right -10%
    height 10rem
    background #fff
    transform rotateZ(-4deg)
    @media screen and (orientation:landscape)
      transform none
      bottom -50%
.i-am-fade-slide-down
  h3
    animation fade-slide-down 1s forwards
  p
    animation fade-slide-down 1s forwards
    animation-delay 300 ms
  img
    animation fade-slide-down 1s forwards
    animation-delay 450 ms
  footer
    animation fade-slide-down 1s forwards
    animation-delay 600 ms
.i-am-last-envolp
  @media screen and (min-width: 700px)
    display flex
    flex-direction row
    justify-content center
    align-items center
    position relative
.i-am-container
  @media screen and (min-width: 700px)
    max-width 40vw
  @media screen and (orientation:landscape)
    p
      font-size 1.7vw
  @media screen and (orientation:portrait)
    p
      font-size 1.7vh
.i-am-container + img
  max-height 20rem
  transform scale(0)
  position relative
  z-index 1
.contact-to-me
  position relative
  z-index 3
  padding 1rem
  background #fff
  @media screen and (min-width: 700px)
    max-width: 50vw;
    margin: 0 auto;
.donate
  background url('../img/hands.jpg')
  background-position center
  background-size cover
  background-attachment fixed
  display flex
  flex-direction column
  justify-content center
  align-items center
  height 100vh
  width 100vw
  position relative
  padding 1rem
  transform-origin center center
  transform scale(0)
  @media screen and (orientation:landscape)
    h3
      font-size 2.3vw
    p, a
      font-size 1.7vw
  @media screen and (orientation:portrait)
    h3
      font-size 2.3vh
    p, a
      font-size 1.7vh
  @media screen and (min-width: 700px)
    h3
      font-size 2.3vw
    p, a
      font-size 1.7vw
  &.donate-show
    animation fade-slide-up 1.5s forwards
  section
    background rgba(255,255,255,0.75)
    box-shadow shadow-standar
    text-align center
    padding 0.5rem
    border-radius 0.5rem
  a
    text-decoration none
    color inherit
  a:last-child
    position relative
    top -3%
    color #fff
    @media screen and (min-width: 700px)
      top 3%
  p
    text-align center
.Home-footer
  display flex
  flex-direction column
  align-items center
  justify-content center
  background rgba(0, 0, 0, .85)
  color #fff
  text-align center
  padding 1rem
  position fixed
  z-index -1
  bottom 0
  left 0
  right 0
  height 40vh
  a
    color #fff
.Home-dropdown-menu
  @media screen and (min-width: 700px)
    display flex !important
    position relative
    top 0
    background transparent
    border none
    .dropdown-item
      color #ffff
@keyframes hero-caption
  0% {
    opacity 0
    transform scale(0)
  }
  50% {
    opacity 1
    transform scale(1)
  }
  100% {
    transform none
  }
@keyframes fade-slide-down
  0% {
    opacity 0
    transform translateY(-4rem)
  }
  100% {
    opacity 1
    transform none
  }
@keyframes fade-slide-up
  0% {
    opacity 0
    transform translateY(4rem)
  }
  100% {
    opacity 1
    transform none
  }
@keyframes splash
  0% {
    opacity 0
    transform scale(0) translateY(-4rem)
  }
  100% {
    opacity 1
    transform none
  }
@keyframes list-group-item-show
  0% {
    display none
    opacity 0
    transform rotateY(90deg)
  }
  100% {
    display block
    opacity 1
    transform none
  }
