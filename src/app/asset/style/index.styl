height-standar = 56px
shadow-standar = 0px 1px 5px 0px rgba(0,0,0,0.2), 0px 2px 2px 0px rgba(0,0,0,0.14), 0px 3px 1px -2px rgba(0,0,0,0.12)
body
  margin 0
  padding 0
  overflow-x hidden
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen",
    "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue",
    sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

code
  font-family source-code-pro, Menlo, Monaco, Consolas, "Courier New",
    monospace
.Home-header
  // background-color #1C1259
  min-height 100vh
  text-align center
  color #fff
  transform-style preserve-3d
  overflow hidden
  perspective 100px
  &::before
    background linear-gradient(to bottom, rgba(28,18,89,1) 0%, rgba(255,255,255,0) 100%), url('../img/flag.jpg') no-repeat bottom
    background-size cover
    content ""
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    z-index -1
    opacity 0
    animation fade-slide-down 2s .5s cubic-bezier(0, 0.5, 0, 1) forwards
  &::after
    background #F9FCFF
    content ""
    height 40rem
    left -5%
    position absolute
    right -5%
    top 90%
    transform-origin 0 0
    animation rotate-up 2s .5s cubic-bezier(0, 0.5, 0, 1) forwards
  p
    background-color rgba(202, 202, 234, 0.5)
    padding 1rem 0.5rem
    color #fafafa
  @media screen and (orientation:portrait)
    span
      font-size 6vh
  @media screen and (orientation:landscape)
    span
      font-size 6vw
.Home-Navbar
  height height-standar
  color #fff
.Home-Navbar-ul
  display flex
  flex-direction row
  align-content stretch
  align-items center

  padding 0 0.5rem
  margin 0
  height inherit
  width inherit


  list-style-type none

  font-variant small-caps
  font-weight 900
  a
    color inherit
    text-decoration none
.Home-Navbar-brand
  display inherit
  flex-direction inherit
  align-items inherit
  flex-grow 10
  img
    max-width 40px
    margin-right 0.5rem

.Home-Navbar-login
  flex-grow 1
  text-align center

.Home-Navbar-config
  flex-grow 1
  text-align center
.Home-body
  display flex
  align-items stretch
  p:first-child
    text-align center
  p
    text-align justify
    margin 0
    color #fafafa
  @media screen and (orientation:portrait)
    flex-direction column
    font-size 3.2vh

  @media screen and (orientation:landscape)
    flex-direction row
    font-size 2.5vw
    p
      width 50vw

@keyframes fade-slide-down
  0% {
    opacity 0
    transform translateY(-4rem)
  }
  100% {
    opacity 1
    transform none
  }
@keyframes rotate-up
  100% {
    transform: rotateZ(-4deg);
  }

