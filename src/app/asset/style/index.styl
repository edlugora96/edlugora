.Home-Navbar
  height height-standar
  color #fff
.Home-Navbar-ul
  display flex
  flex-direction row
  align-content stretch
  align-items center

  padding 0 0.5rem
  margin 0
  height inherit
  width inherit


  list-style-type none

  font-variant small-caps
  font-weight 900
  a
    color inherit
    text-decoration none
.Home-Navbar-brand
  display inherit
  flex-direction inherit
  align-items inherit
  flex-grow 10
  img
    max-width 40px
    margin-right 0.5rem

.Home-Navbar-login
  flex-grow 1
  text-align center

.Home-Navbar-config
  flex-grow 1
  text-align center
.Home-header-body
  display flex
  flex-direction column
  justify-content center
  align-items center
  height 100vh
  width 100vw
  position relative
  top - height-standar
  z-index 2
  transform-origin center center
  animation fade-slide-down 1s 1 forwards
  .stripe
    position absolute
    top 29%
    left -50%
    right -50%
    height 45vh
    background #38514e
    transform rotateZ(10deg)
    z-index 1
    // @media screen and (orientation:portrait)
    @media screen and (orientation:landscape)
      top 36%
      height 40vh
      transform rotateZ(4deg)
  .view-more, p, article
    position relative
    z-index 2
    text-align center
    transform scale(0)
  article
    animation hero-caption 1s 1 forwards
  p
    animation hero-caption 1s 1 forwards
    animation-delay 300ms
  .view-more
    animation hero-caption 1s 1 forwards
    animation-delay 600ms
