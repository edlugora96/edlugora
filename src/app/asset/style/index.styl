  position relative
  color #fff
  transform-style preserve-3d
  overflow hidden
  perspective 100px
  z-index 2
  &::before
    content ""
    background url('../img/code.jpg')
    background-position center
    background-size cover
    background-attachment fixed
    filter blur(0.1rem)
    position absolute
    top 0
    right 0
    height 100vh
    left 0
    z-index -1
